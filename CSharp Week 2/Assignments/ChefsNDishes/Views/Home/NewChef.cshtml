@{
    ViewData["Title"] = "Home Page";
}
@model Chef

<div class="d-flex justify-content-center m-5">
    <div class="d-flex gap-3">
        <a href="/">Chefs</a>
        <p>|</p>
        <a href="/dishes">Dishes</a>
        <p>|</p>
        <p>Add a Chef</p>
        <p>|</p>
        <a href="/dishes/new">Add a Dish</a>
    </div>
</div>

<h2 class="text-center">Add a Chef</h2>
<hr>
<div class="d-flex justify-content-center align-items-center">
    <form asp-action="CreateChef" asp-controller="Home" method="post">
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <div class="d-flex align-items-center gap-4">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control mb-3">
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
        <div class="d-flex align-items-center gap-4">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control mb-3">
        </div>
        <span asp-validation-for="DoB" class="text-danger"></span>
        <div class="d-flex align-items-center gap-4">
            <label asp-for="DoB"></label>
            <input asp-for="DoB" class="form-control mb-3">
        </div>
        <div class="d-flex justify-content-center mt-2">
            <input type="submit" value="Add Chef" class="btn btn-success">
        </div>
    </form>
</div>