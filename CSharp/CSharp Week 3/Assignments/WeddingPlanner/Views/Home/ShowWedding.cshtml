@{
    ViewData["Title"] = "View Wedding";
}

@model MyViewModel

<nav class=" d-flex justify-content-between m-5">
    <div>
        <h3>Welcome, @Context.Session.GetString("FirstName")</h3>
    </div>
    <div class="d-flex gap-3">
        <a asp-action="Dashboard">Home</a>
        <a asp-action="NewWedding">Plan A Wedding</a>
        <form asp-action="Logout" asp-controller="Home" method="post">
            <input type="submit" value="Logout"
                style="background: none; border: none; text-decoration: underline; color: #0D6EFD;">
        </form>
    </div>
</nav>
<hr>
<h2>@Model.Wedding.WedderOne & @Model.Wedding.WedderTwo's Wedding!</h2>
<p>Date: @Model.Wedding.WeddingDate.ToShortDateString()</p>
<h5>Guests:</h5>
<div class="border" style="width: fit-content; padding: 1em;">
    @foreach (Association item in Model.Wedding.GuestList)
    {
        <p>@item.User.FirstName @item.User.LastName</p>
    }
</div>