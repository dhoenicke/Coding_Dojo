@{
    ViewData["Title"] = "New Wedding";
}

@model Wedding

<nav class=" d-flex justify-content-between m-5">
    <div>
        <h3>Welcome, @Context.Session.GetString("FirstName")</h3>
    </div>
    <div class="d-flex gap-3">
        <a asp-action="Dashboard">Home</a>
        <a asp-action="NewWedding">Plan A Wedding</a>
        <form asp-action="Logout" asp-controller="Home" method="post">
            <input type="submit" value="Logout"
                style="background: none; border: none; text-decoration: underline; color: #0D6EFD;">
        </form>
    </div>
</nav>
<hr>
<div class="d-flex flex-column  col-4 m-3">
    <h2 class="mb-4">Plan A Wedding</h2>
    <form asp-action="CreateWedding" asp-controller="Home" method="post">
        <input type="hidden" value="@ViewBag.UserId" name="CreatorId">
        <span asp-validation-for="WedderOne" class="text-danger"></span>
        <div class="d-flex align-items-center gap-3 mb-3">
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne" class="form-control">
        </div>
        <span asp-validation-for="WedderTwo" class="text-danger"></span>
        <div class="d-flex align-items-center gap-3 mb-3">
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo" class="form-control">
        </div>
        <span asp-validation-for="WeddingDate" class="text-danger"></span>
        <div class="d-flex align-items-center gap-3 mb-3">
            <label asp-for="WeddingDate"></label>
            <input asp-for="WeddingDate" class="form-control">
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
        <div class="d-flex align-items-center gap-3 mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
        </div>
        <input type="submit" value="Submit" class="btn btn-success">
    </form>
</div>