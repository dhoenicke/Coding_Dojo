@model MyViewModel

<nav class="text-center m-5">
    <div class="d-flex justify-content-center gap-1">
        <a class="h5" href="/">Products</a> |
        <a class="h5" href="/categories">Categories</a>
    </div>
</nav>

<h2 class="text-center mb-5">@Model.Product.ProductName</h2>

<div class="d-flex justify-content-evenly">
    <div>
        <h3 class="mb-3">Categories</h3>
        @foreach (Association association in Model.Product.CategoriesOfProduct)
        {
            <p class="text-center">@association.Category.CategoryName</p>
        }
    </div>

    <div>
        @await Html.PartialAsync("_AddCat", Model.association)
    </div>
</div>